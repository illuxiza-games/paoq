{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@/components": [
        "./src/components"
      ],
      "@/hooks": [
        "./src/hooks"
      ],
      "@/stores": [
        "./src/stores"
      ],
      "@/pages": [
        "./src/pages"
      ],
      "@/utils": [
        "./src/utils"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/stores/*": [
        "./src/stores/*"
      ]
    },
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
